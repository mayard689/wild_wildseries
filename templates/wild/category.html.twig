{% extends 'base.html.twig' %}

{% block title %}{{ 'program.category'|trans }}{{ category.name }}{% endblock %}

{% block main %}
    <h1>{{ 'program.category'|trans }} {{ category.name }} : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ program.id }} / {{ program.title }} - {{ 'category'|trans }} : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        {{ 'no.serie.found'|trans }}
    {% endfor %}
    <a href="{{ path('app_index') }}">
        {{ 'back.home'|trans }}
    </a>
{% endblock %}
