{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block main %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
        </tbody>
    </table>

    <p>{{ actor.name }} participe aux séries suivantes :</p>
    <ul>
        {% for program in actor.programs %}
            <li><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }} </a></li>
        {% else %}
            <li>Aucune série n'est enregistrée avec cet acteur</li>
        {% endfor %}
    </ul>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
